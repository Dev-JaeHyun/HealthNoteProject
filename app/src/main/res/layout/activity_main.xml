<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/death_note_font"
            android:text="Health Note"
            android:textSize="80sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            />
        <!-- 로고 텍스트 뷰 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_weight="5"
                android:background="@drawable/login_edge"
                >
                <EditText
                    android:id="@+id/inputid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:maxLength="15"
                    android:hint="@string/id"
                    android:textColorHighlight="@color/white_hint"
                    android:textColorHint="@color/white_hint"
                    android:autoSizeMaxTextSize="30dp"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:drawableStart="@drawable/login_person_white"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="3dp"
                    />

                <EditText
                    android:id="@+id/inputpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:maxLength="15"
                    android:hint="@string/pw"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white_hint"
                    android:autoSizeMaxTextSize="30dp"
                    android:inputType="textPassword"
                    android:importantForAutofill="no"
                    android:drawableStart="@drawable/login_lock_white"
                    android:drawablePadding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="6dp"
                    />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        </LinearLayout>
        <!-- 아이디 비밀번호 입력 레이아웃 -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="15dp"
            >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/login_button"
                android:text="로그인"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:onClick="Login"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>



            </LinearLayout>
        <!-- 로그인 버튼 레이아웃 -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            >

            <TextView
                android:id="@+id/findIdBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 찾기"
                android:textColor="@color/white_hint"
                android:textSize="15sp"
                android:onClick="showDialog"
                />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white_hint"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="3dp"
                />

            <TextView
                android:id="@+id/findPwBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"
                android:textColor="@color/white_hint"
                android:textSize="15sp"
                android:onClick="showDialog"
                />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white_hint"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="3dp"
                />

            <TextView
                android:id="@+id/registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="회원가입"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:onClick="showDialog"
                />

        </LinearLayout>
        <!-- 추가 기능 레이아웃 -->

    </LinearLayout>

</LinearLayout>
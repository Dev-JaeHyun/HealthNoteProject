<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/popup_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:padding="20dp"
        >

        <ImageButton
            android:id="@+id/dismissBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ic_backarrow"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="4"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>
    <!-- 상단 레이아웃 -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"
        />
    <!-- 구분선 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginVertical="20dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:paddingVertical="20dp"
            >
            <EditText
                android:id="@+id/inputid"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edge"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxLength="15"
                android:hint="@string/id"
                android:textColorHighlight="@color/white_hint"
                android:textColorHint="@color/white_hint"
                android:inputType="text"
                android:importantForAutofill="no"
                android:drawableStart="@drawable/login_person"
                android:drawableTint="@color/white"
                android:drawablePadding="10dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="7dp"
                />
            <TextView
                android:id="@+id/warnid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warm_red"
                android:paddingHorizontal="5dp"
                android:text=" "
                android:layout_marginBottom="3dp"
                />

            <EditText
                android:id="@+id/inputpw"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edge"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxLength="15"
                android:hint="@string/pw"
                android:textColorHighlight="@color/white_hint"
                android:textColorHint="@color/white_hint"
                android:inputType="text"
                android:importantForAutofill="no"
                android:drawableStart="@drawable/login_lock"
                android:drawableTint="@color/white"
                android:drawablePadding="10dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="7dp"
                />
            <TextView
                android:id="@+id/warnpw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warm_red"
                android:paddingHorizontal="5dp"
                android:text=" "
                android:layout_marginBottom="3dp"
                />

            <EditText
                android:id="@+id/inputname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edge"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxLength="15"
                android:hint="계정 이름"
                android:textColorHighlight="@color/white_hint"
                android:textColorHint="@color/white_hint"
                android:inputType="text"
                android:importantForAutofill="no"
                android:drawableStart="@drawable/login_nickname"
                android:drawableTint="@color/white"
                android:drawablePadding="10dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="7dp"
                />
            <TextView
                android:id="@+id/warnname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warm_red"
                android:paddingHorizontal="5dp"
                android:text=" "
                android:layout_marginBottom="3dp"
                />



            <EditText
                android:id="@+id/inputemail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edge"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:maxLength="30"
                android:hint="@string/email"
                android:textColorHighlight="@color/white_hint"
                android:textColorHint="@color/white_hint"
                android:inputType="text"
                android:importantForAutofill="no"
                android:drawableStart="@drawable/login_email"
                android:drawableTint="@color/white"
                android:drawablePadding="10dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="7dp"
                />
            <TextView
                android:id="@+id/warnemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/warm_red"
                android:paddingHorizontal="5dp"
                android:text=" "
                android:layout_marginBottom="3dp"
                />


        </LinearLayout>
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button"
            android:text="전송"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            />





    </LinearLayout>


</LinearLayout>